public class Integer18 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("999 dan katta bo'lgan son kriting: ");
        int son = scanner.nextInt();

        int b = son / 1000;

        
        int q = son % 1000;
        System.out.println("Sonning butun  raqami: " + b);
        System.out.println("Sonning  qoldiq raqami: " + q);
    }
}
