import java.util.Scanner;

public class Integer22 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Kun boshidan o'tgan vaqtni kriting sekunda:  ");
        int son = scanner.nextInt();

        int m = son/3600;
        int s = son-(m*3600);


        System.out.println("Kun boshidan " + m +" soat va "+ s + " sekund o'tgan");


    }
}
